<h1>Create New Todo</h1>

<% if @todo.errors.any? %>
  <h2>ERRORS</h2>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
      <li><%=msg%></li>
    <%end%>
  </ul>
<%end%>

<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name%><br>
    <%= f.text_field :user%>
  </p>
  <p>
    <%= f.label :description%><br>
      <%= f.text_area :description%>
  </p>
  <p>
  <%= f.submit%>
  </p>
<%end%>
